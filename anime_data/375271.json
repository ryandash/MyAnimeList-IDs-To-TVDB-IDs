            "Episodes": {
                "1": {
                    "ID": "7531289",
                    "TYPE": null,
                    "URL": "https://www.thetvdb.com/series/to-your-eternity/episodes/7531289",
                    "TitleEnglish": "The Last One",
                    "SummaryEnglish": "An orb is tossed upon the earth. It transforms to match its surrounding environment: first a rock, then moss, then a dying wolf. The wolf returns to its last remaining family, a boy living alone in a small home in the snow."
                },
                "2": {
                    "ID": "8196193",
                    "TYPE": null,
                    "URL": "https://www.thetvdb.com/series/to-your-eternity/episodes/8196193",
                    "TitleEnglish": "A Rambunctious Girl",
                    "SummaryEnglish": "The orb, having morphed into a boy, finds its way to Ninanna, where he is attacked. He is discovered by a girl, March, who may not achieve her goal of becoming a grown-up."
                },
                "3": {
                    "ID": "8196194",
                    "TYPE": null,
                    "URL": "https://www.thetvdb.com/series/to-your-eternity/episodes/8196194",
                    "TitleEnglish": "A Small Evolution",
                    "SummaryEnglish": "March is escorted to the altar to be sacrificed to Oniguma. Along the way, she tends to Fushi, who, despite having the body of a young man, doesn’t seem to have the mind of one."
                },
                "4": {
                    "ID": "8196195",
                    "TYPE": null,
                    "URL": "https://www.thetvdb.com/series/to-your-eternity/episodes/8196195",
                    "TitleEnglish": "A Large Vessel",
                    "SummaryEnglish": "Hayase, interested in Fushi’s inability to die, brings him along with March, Parona and Pioran to the nation of Yanome. They are shown around town and treated well, but things are not as they seem."
                },
                "6": {
                    "ID": "8196197",
                    "TYPE": null,
                    "URL": "https://www.thetvdb.com/series/to-your-eternity/episodes/8196197",
                    "TitleEnglish": "Our Goals",
                    "SummaryEnglish": "Having gained a semblance of humanity, Fushi sets off on his own. He encounters Pioran again, who teachers him words and writing, helping him live as a human being."
                },
                "7": {
                    "ID": "8196198",
                    "TYPE": null,
                    "URL": "https://www.thetvdb.com/series/to-your-eternity/episodes/8196198",
                    "TitleEnglish": "The Boy Who Wants to Change",
                    "SummaryEnglish": "Fushi and Pioran arrive at Takunaha, where they meet Booze Man and a boy named Gugu. Gugu, who had been living with Booze Man for several months following an accident, warms up to Fushi."
                },
                "8": {
                    "ID": "8196199",
                    "TYPE": null,
                    "URL": "https://www.thetvdb.com/series/to-your-eternity/episodes/8196199",
                    "TitleEnglish": "Monster Brothers",
                    "SummaryEnglish": "Fushi explains to Gugu how his form as the wolf, Joaan, and March, came to be. Gugu explains death to Fushi. Together, they come to understand the meaning of family."
                },
                "9": {
                    "ID": "8196200",
                    "TYPE": null,
                    "URL": "https://www.thetvdb.com/series/to-your-eternity/episodes/8196200",
                    "TitleEnglish": "Deep Memories",
                    "SummaryEnglish": "Fushi tells Gugu about the wolf, Joaan, and the boy he took on the form of. Gugu explains death to Fushi, recalling his own past, working for a wealthy family with his brother."
                },
                "10": {
                    "ID": "8196201",
                    "TYPE": null,
                    "URL": "https://www.thetvdb.com/series/to-your-eternity/episodes/8196201",
                    "TitleEnglish": "New Family",
                    "SummaryEnglish": "Fushi and Gugu fight against the Nokkers that they encountered in the forest. Though the situation is grim, Gugu has a trick up his sleeve."
                },
                "11": {
                    "ID": "8196202",
                    "TYPE": null,
                    "URL": "https://www.thetvdb.com/series/to-your-eternity/episodes/8196202",
                    "TitleEnglish": "Gift From the Past",
                    "SummaryEnglish": "Four years after their encounter with the Nokkers, Fushi and Gugu have grown into fine young men. They’re invited to Rean’s birthday party after a brief reunion with Gugu’s brother."
                },
                "12": {
                    "ID": "8196203",
                    "TYPE": null,
                    "URL": "https://www.thetvdb.com/series/to-your-eternity/episodes/8196203",
                    "TitleEnglish": "Awakening",
                    "SummaryEnglish": "Just as Gugu and Rean come to understand each other, the Nokkers emerge, causing panic in the party hall. Fushi and Gugu are forced to fight."
                },
                "13": {
                    "ID": "8196204",
                    "TYPE": null,
                    "URL": "https://www.thetvdb.com/series/to-your-eternity/episodes/8196204",
                    "TitleEnglish": "Aspiring to Go Higher",
                    "SummaryEnglish": "Fushi leaves Booze Man’s home and sets out to wander aimlessly around Takunaha. He has many questions for the Observer, but can’t seem to get any straight answers."
                },
                "14": {
                    "ID": "8196205",
                    "TYPE": null,
                    "URL": "https://www.thetvdb.com/series/to-your-eternity/episodes/8196205",
                    "TitleEnglish": "Jananda, Island of Freedom",
                    "SummaryEnglish": "Fushi and Pioran are separated on the prison island of Jananda. He enters a tournament where, if he survives until the end, he will be granted the right to do anything he wants – including leaving the island with Pioran."
                },
                "15": {
                    "ID": "8196206",
                    "TYPE": null,
                    "URL": "https://www.thetvdb.com/series/to-your-eternity/episodes/8196206",
                    "TitleEnglish": "A Girl Named Tonari",
                    "SummaryEnglish": "Fushi transforms into Parona of Ninannah in the middle of the tournament. He is shocked when he realizes what this implies. Meanwhile, Tonari, desperate to have Fushi join her and her friends, offers to help rescue Pioran."
                },
                "16": {
                    "ID": "8196207",
                    "TYPE": null,
                    "URL": "https://www.thetvdb.com/series/to-your-eternity/episodes/8196207",
                    "TitleEnglish": "The Children's Dreams",
                    "SummaryEnglish": "Fushi just barely manages to take down the Nokkers. He opens up to the others, and they discuss their dreams and pasts."
                },
                "17": {
                    "ID": "8196208",
                    "TYPE": null,
                    "URL": "https://www.thetvdb.com/series/to-your-eternity/episodes/8196208",
                    "TitleEnglish": "The Defeated",
                    "SummaryEnglish": "Having defeated Fushi, Hayase makes a surprising proposal to the people of the island of Jananda."
                },
                "18": {
                    "ID": "8196209",
                    "TYPE": null,
                    "URL": "https://www.thetvdb.com/series/to-your-eternity/episodes/8196209",
                    "TitleEnglish": "To Continue On",
                    "SummaryEnglish": "Tonari returns to Jananda to rescue Fushi. Before setting out again, they stay the night in a cave, and Tonari shares her past."
                },
                "19": {
                    "ID": "8196210",
                    "TYPE": null,
                    "URL": "https://www.thetvdb.com/series/to-your-eternity/episodes/8196210",
                    "TitleEnglish": "Wandering Rage",
                    "SummaryEnglish": "Fushi, Tonari and their friends fight the Nokkers, who have taken over corpses."
                },
                "20": {
                    "ID": "8196211",
                    "TYPE": null,
                    "URL": "https://www.thetvdb.com/series/to-your-eternity/episodes/8196211",
                    "TitleEnglish": "Echoes",
                    "SummaryEnglish": "Fushi parts ways with Tonari and heads to the port where Pioran is waiting for him. He worries that he may attract the Nokkers again and endanger her."
                }
            }
        },
